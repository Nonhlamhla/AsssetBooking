<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.asssetbooking.LoginActivity">

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/textViewEmail"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textViewEmail"
        android:id="@+id/editTextEmail"
        android:hint="enter email"
        android:layout_toLeftOf="@+id/buttonSignUp"
        android:layout_toStartOf="@+id/buttonSignUp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/textViewPassword"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textViewPassword"
        android:id="@+id/editTextPassword"
        android:hint="enter password"
        android:layout_toLeftOf="@+id/buttonSignUp"
        android:layout_toStartOf="@+id/buttonSignUp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="60dp"
        android:id="@+id/buttonLogin"
        android:textAllCaps="false"
        android:layout_alignLeft="@+id/buttonGooglePlus"
        android:layout_alignStart="@+id/buttonGooglePlus"
        android:layout_alignRight="@+id/buttonGooglePlus"
        android:layout_alignEnd="@+id/buttonGooglePlus" />

    <Button
        android:text="Register using Google Plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGooglePlus"
        android:textAllCaps="false"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SignUp"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/buttonSignUp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
